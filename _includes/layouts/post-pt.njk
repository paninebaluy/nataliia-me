  <style>
    @font-face {
      font-family: 'Cutive Mono';
      src:
        local("Cutive Mono"),
        url("../vendor/fonts/Cutive_Mono/CutiveMono-Regular.woff2") format("woff2"),
        url("../vendor/fonts/Cutive_Mono/CutiveMono-Regular.woff") format("woff"),
        url("../vendor/fonts/Cutive_Mono/CutiveMono-Regular.ttf") format("truetype"),
        url("../vendor/fonts/Cutive_Mono/CutiveMono-Regular.otf") format("opentype");
      font-weight: normal;
      font-style: normal;
    }

    @font-face {
      font-family: 'Cutive Regular';
      src:
        local("Cutive Regular"),
        url("../vendor/fonts/Cutive/Cutive-Regular.woff2") format("woff2"),
        url("../vendor/fonts/Cutive/Cutive-Regular.woff") format("woff"),
        url("../vendor/fonts/Cutive/Cutive-Regular.ttf") format("truetype"),
        url("../vendor/fonts/Cutive/Cutive-Regular.otf") format("opentype");
      font-weight: normal;
      font-style: normal;
    }

    body {
      font-family: 'Cutive Regular', sans-serif;
      margin: 0;
      padding: 2rem;
      background-color: #fff;
      color: #222;
      line-height: 1.6;
    }

    nav {
      font-family: 'Cutive Mono', monospace;
      margin: 0;
      padding: 2rem;
      background-color: #fff;
      color: #222;
      line-height: 1.6;
    }

    img {
      max-width: 100%;
      height: auto;
      display: block;
      margin: 1rem 0;
    }

    figure {
      margin: 2rem 0;
      text-align: center;
    }

    figcaption {
      font-size: 0.9em;
      color: #666;
      margin-top: 0.5rem;
    }

    main {
      max-width: 800px;
      margin: auto;
    }

  </style>

  <script>
    // open all links in new tabs (except anchor and relative links)
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('a[href]').forEach(link => {
        const href = link.getAttribute('href');
        if (
          href.startsWith('http') &&
          !href.startsWith(window.location.origin)
        ) {
          link.setAttribute('target', '_blank');
          link.setAttribute('rel', 'noopener noreferrer');
        }
      });
    });
  </script>

